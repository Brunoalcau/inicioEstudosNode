<%include ../head %>
<% include ../menu %>
<% include ../header %>

<script type="text/javascript" src="/socket.io/socket.io.js" ></script>
<script type="text/javascript">
	var socket = io.connect('http://192.168.1.3:3000');
	socket.on('send-client',function(msg){
		document.getElementById('chat').innerHTML += msg;
	});

	var enviar = function(){
		var nome = document.getElementById('nome').value;
		var msg = document.getElementById('msg').value;
		if(msg){
			socket.emit('send-server',{nome:nome,msg:msg});
			document.getElementById('msg').value ='';	
		}		
	}	

</script>
<header>
	<h2>
		Chat 
	</h2>
</header>	

<section>

<div class="col-lg-6 well">
	<pre id="chat"></pre>	
	<input type="hidden" id="nome" value="<%- usuario.nome %>">	
		<div class="input-group">
			<input type="text" id="msg" placeholder="Mensagem" class="form-control"> 
			<span class="input-group-btn">
				<button onClick="enviar()"  type="button" class="btn btn-success">Enviar</button>
			</span>		
		</div>
	</div>
	
</section>

